@model IEnumerable<Calc.Models.Classes.Receita>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="ListadeReceita" asp-action="Index" method="get">
    <p>
        Pesquisar por tipo: @Html.TextBox("buscar")
    </p>
    <p>
        Data de início: @Html.TextBox("buscarInicio")
        Data de fim: @Html.TextBox("buscarFim")
    </p>
    <input type="submit" value="Pesquisar" />
   
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TipoReceita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FormaRecebimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataRecebimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parcelamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroParcelas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimeiraDataVencimento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TipoReceita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FormaRecebimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataRecebimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parcelamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroParcelas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimeiraDataVencimento)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
